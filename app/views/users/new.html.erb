<h1>Sign up here:</h1>

<%= render partial: 'layouts/errors', locals: {obj: @user}  %>
<%= form_for(@user) do |f|%>

  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Sign Up" %>

  <div class="col-xs-4 col-xs-offset-2">
  [ <%= link_to 'Cancel request and Return to Posts Listing', posts_path %> ]
  </div> 
<% end %>