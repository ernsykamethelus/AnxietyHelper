<h1> Listing of all of the Posts</h1>
<li><%= link_to "Posts", posts_path %></li> || <li><%= link_to "Create a Post", new_post_path %></li>
<br>
<h1 align="center">Listing all posts</h1>
<% @posts.each do |post| %>
 <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
   <div class="well well-lg">
    <div class="post-title">
     <%= link_to post.title, post_path(post) %>
    </div>
    <div class="post-body">
     <%= truncate(post.description, length: 100) %>
     <small>Created by: <%= post.user.username if post.user %>,
      <%= time_ago_in_words(post.created_at) %> ago, 
       last updated: <%= time_ago_in_words(post.updated_at) %> ago</small>
    </div>
    <div class="post-actions">
     <%= link_to "Edit", edit_post_path(post), class: "btn btn-xs btn-primary" %>
     <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}, class: "btn btn-xs btn-danger" %>

    </div>
   </div>
  </div>
 </div>
<% end %>



